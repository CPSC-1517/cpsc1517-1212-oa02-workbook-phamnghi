@page "{RegionID?}" //Define a route value for RegionID
@model WestwindWebApp.Pages.Region.RegionQueryOneModel
@{
    ViewData["Title"] = "Primary Key Region Query";
}
<h1>Query: Region query by primary key</h1>

<p>@Model.FeedBackMessage</p>

<form method="post">
    <label>Enter Region ID:</label>
    <input type="number"
            asp-for="RegionID"
            placeholder="Enter RegionID to search for required" />
    <br />
    <button type="submit" asp-page-handler="Search">Search By RegionID</button>
    &nbsp;&nbsp;
    <button type="submit" asp-page-handler="Clear">Clear</button>

</form>