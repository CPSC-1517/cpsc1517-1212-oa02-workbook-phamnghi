@page
@model RazorPageWebAppDemo.Pages.FormFieldControlsModel
@{
    ViewData["Title"] = "HTML Form Field COntrols";
}
<h1>HTML Form Field Controls</h1>

@Model.Message

<form method="post">
    <div>
        <label for="Username">Username</label>
        <input type="text" id="Username" name="Username" value="@Model.Username" />
    </div>
    <div>
        <label for="Password">Password</label>
        <input type="text" id="Password" name="Password" value="@Model.Password" />
    </div>
    <div>
        <label for="ConFirmPassword">Confirm Password</label>
        <input type="text" id="ConfirmPassword" name="ConfirmPassword" value="@Model.ConfirmPassword" />
    </div>

    <div>
        <button type="submit">Submit</button>
    </div>

</form>